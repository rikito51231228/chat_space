.MainChat
  .group-info
    .info-box
      .info-box__name
        = @group.name
      %ul.info-box__member
        Member :
        %li.info-box__member__list 
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path(@group), class: "edit-btn" do
      Edit

  .message-list
    = render @messages

  .message-form
    = form_with model: [@group, @message], class: "form-box", local: true do |f|
      .text-box
        = f.text_field :text, placeholder: "type a message", class: "text-box__text"
        = f.label :image, class: "text-box__label" do
          = icon('far', 'image', class: "text-box__label__icon")
          = f.file_field :image, class: "Hidden"
      = f.submit 'Send', class: "submit-box"
