.SideBar
  .user-name
    .user-box
      .user-box__nickname
        = current_user.name
      .user-box__icon
        = link_to new_group_path(current_user), method: :get, class: "user-box__icon__btn" do
          = icon('fas', 'edit')
          
        = link_to edit_user_path(current_user), method: :get, class: "user-box__icon__btn" do
          = icon('fas', 'cog')

  .group-list
    - current_user.groups.each do |group|
      .group-box
        = link_to group_messages_path(group), class: "group-box" do
          .group-name
            = group.name
          .new-message
            = group.show_last_message